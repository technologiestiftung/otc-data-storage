{
  "include": ["api/**/*", "types.d.ts", "api"],
  "exclude": ["node_modules", "dist", "api/lib/graphql-schema"],
  "compilerOptions": {
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "api",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["types", "node_modules/@types"]
  }
}
