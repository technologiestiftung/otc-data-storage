{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    // "strictNullChecks": false,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  }
}
