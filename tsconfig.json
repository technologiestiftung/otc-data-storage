{
  "include": ["src/**/*","types.d.ts", "src"],
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "plugins": [{ "name": "nexus/typescript-language-service" }],
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noEmit": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["types","node_modules/@types"]
  }
}
